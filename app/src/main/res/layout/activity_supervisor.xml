<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuperadminActivity">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/fondo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="30dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom2"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="ET"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-17dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="-32dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ULSE"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-121dp"
            android:translationY="20dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:translationX="-20dp"
            android:translationY="15dp"
            app:srcCompat="@mipmap/ic_foto1_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="174dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="86dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="487dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hola"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hola,"
                        android:translationX="20dp" />

                    <TextView
                        android:id="@+id/admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SUPERVISOR"
                        android:textColor="#CF7A2F"
                        android:textStyle="bold"
                        android:translationX="10dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/pregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¿Qué hacemos hoy?"
                    android:textStyle="italic"
                    android:translationX="20dp"
                    android:translationY="-20dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Encontrarás tus funciones a continuación:"
                    android:textSize="12sp"
                    android:translationX="20dp"
                    android:translationY="-40dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="wrap_content"
                android:layout_height="182dp"
                android:layout_weight="1"
                android:translationY="-20dp"
                app:srcCompat="@mipmap/superadmin" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="483dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="248dp">

        <androidx.cardview.widget.CardView
            android:layout_width="347dp"
            android:layout_height="105dp"
            android:translationX="30dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="90dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card1"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:text="Mensajes"
                    android:textColor="#040404"
                    android:textStyle="bold"
                    android:translationX="20dp"
                    android:translationY="10dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:text="Visualiza la lista de mensajes disponibles"
                    android:textColor="#000000"
                    android:translationX="20dp"
                    android:translationY="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="347dp"
            android:layout_height="80dp"
            android:translationX="30dp"
            android:translationY="20dp"
            app:cardBackgroundColor="#CDFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="SITIOS"
                    android:textColor="#090909"
                    android:textStyle="bold"
                    android:translationX="20dp"
                    android:translationY="10dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="307dp"
                    android:layout_height="wrap_content"
                    android:text="Visualiza la lista de sitios"
                    android:textColor="#090909"
                    android:translationX="20dp"
                    android:translationY="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="347dp"
            android:layout_height="65dp"
            android:translationX="30dp"
            android:translationY="40dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="EQUIPOS"
                    android:textColor="#050505"
                    android:textStyle="bold"
                    android:translationX="20dp"
                    android:translationY="10dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:text="Visualiza la lista general de equipos"
                    android:textColor="#0C0C0C"
                    android:translationX="20dp"
                    android:translationY="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cardview_light_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button12"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:onClick="admin"
            android:background="@drawable/ic_home"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:onClick="listaMensaje"
            android:background="@drawable/ic_message"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_user"
            android:onClick="listaUsuarios"
            android:textColorLink="#000000" />

        <Button
            android:id="@+id/button10"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:onClick="listaSitio"
            android:background="@drawable/ic_building"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/ic_router"
            android:onClick="listaEquipo"
            android:textColorLink="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:id="@+id/textView106"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Correo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />


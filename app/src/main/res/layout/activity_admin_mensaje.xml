<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luis Lizano"
            android:textAlignment="center"
            android:textColor="#013430"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrador"
            android:textAlignment="center"
            android:translationY="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="576dp"
            android:translationY="40dp"
            app:cardBackgroundColor="#E0EFEE" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="1dp"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:translationX="-40dp"
                        app:srcCompat="@mipmap/ic_foto_foreground" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="21dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:translationX="-90dp"
                        android:translationY="15dp">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="167dp"
                            android:layout_height="59dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/mensaje1"
                            android:translationX="10dp"
                            android:translationY="7dp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="109dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:translationX="40dp"
                        android:translationY="25dp">

                        <TextView
                            android:id="@+id/titulo"
                            android:layout_width="231dp"
                            android:layout_height="59dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/mensaje2"
                            android:translationX="10dp"
                            android:translationY="7dp" />
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:translationX="20dp"
                        app:srcCompat="@mipmap/ic_foto2_foreground" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="1dp"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:translationX="-40dp"
                        app:srcCompat="@mipmap/ic_foto_foreground" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="21dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:translationX="-90dp"
                        android:translationY="15dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="167dp"
                            android:layout_height="59dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/mensaje1"
                            android:translationX="10dp"
                            android:translationY="7dp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="109dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:translationX="40dp"
                        android:translationY="25dp">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="231dp"
                            android:layout_height="59dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/mensaje2"
                            android:translationX="10dp"
                            android:translationY="7dp" />
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:translationX="20dp"
                        app:srcCompat="@mipmap/ic_foto2_foreground" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="1dp"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:translationX="-40dp"
                        app:srcCompat="@mipmap/ic_foto_foreground" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="21dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:translationX="-90dp"
                        android:translationY="15dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="167dp"
                            android:layout_height="59dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/mensaje1"
                            android:translationX="10dp"
                            android:translationY="7dp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="33dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:translationX="100dp"
                        android:translationY="10dp">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="141dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/mensaje3"
                            android:textStyle="italic"
                            android:translationX="120dp"
                            android:translationY="3dp" />
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:translationX="40dp"
                        app:srcCompat="@mipmap/ic_foto2_foreground" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:translationY="36dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00009688"
                    android:backgroundTint="#62B1A9"
                    android:tint="#5564BC"
                    android:translationY="13dp"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="296dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:translationY="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:hint="Escribe algo ..."
                        android:textColor="#FD131313"
                        android:textColorHint="#2F0C0C0C"
                        android:textStyle="italic" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="44dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:translationY="10dp"
                    app:srcCompat="@mipmap/ic_enviar_foreground" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
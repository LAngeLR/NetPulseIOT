<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.AdminVerUsuarioFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="914dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="252dp"
                android:clickable="true"
                android:src="@drawable/ic_edit"
                app:backgroundTint="#3C8981"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="288dp"
                android:layout_height="70dp"
                android:fontFamily="@font/aclonica"
                android:text="INFORMACIÓN"
                android:textAlignment="center"
                android:textColor="#3C8A82"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="216dp"
                android:layout_height="222dp"
                android:layout_marginEnd="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.04"
                app:srcCompat="@mipmap/ic_foto2_foreground" />

            <ScrollView
                android:layout_width="408dp"
                android:layout_height="430dp"
                android:layout_marginTop="250dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView100"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Nombre(s)"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/textView101"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Rodrigo Luis"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView102"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Apellidos"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/textView103"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Rodriguez Torres"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView104"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Rol"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/textView105"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Administrador"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView106"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Correo"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/textView107"
                                android:layout_width="292dp"
                                android:layout_height="wrap_content"
                                android:text="administradorrodr@gmail.com"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView108"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Teléfono"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/telefonoUserAdmin"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="990122890"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView110"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Domicilio"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/textView111"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Av. Universitaria 123"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
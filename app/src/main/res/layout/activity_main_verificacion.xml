<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondoito"
    >

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="30dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom2"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="ET"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-17dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="-32dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ULSE"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-121dp"
            android:translationY="20dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:translationX="-20dp"
            android:translationY="15dp"
            app:srcCompat="@mipmap/ic_foto1_foreground" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="530dp"
        android:translationY="80dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reestablecer contraseña"
                android:textAlignment="center"
                android:textColor="#AE98F2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationY="20dp" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:translationY="30dp"
                app:srcCompat="@mipmap/reestablcer" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Nueva contraseña"
                android:translationX="35dp"
                android:translationY="40dp" />

            <EditText
                android:id="@+id/editTextTextPassword2"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:translationX="50dp"
                android:translationY="35dp" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:text="Escribe de nuevo la contraseña"
                android:translationX="40dp"
                android:translationY="50dp" />

            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:translationX="50dp"
                android:translationY="50dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#5A8CB4"
                android:text="Reestablecer"
                android:translationX="93dp"
                android:translationY="70dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
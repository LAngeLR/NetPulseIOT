<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context=".AdminListaSitiosActivity">

  <ImageView
      android:id="@+id/fondoImageView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/fondo2" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="86dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/nombre"
          android:layout_width="62dp"
          android:layout_height="wrap_content"
          android:text="N"
          android:textColor="#1D409A"
          android:textSize="20sp"
          android:textStyle="bold"
          android:translationX="30dp"
          android:translationY="20dp" />

      <TextView
          android:id="@+id/nom2"
          android:layout_width="34dp"
          android:layout_height="wrap_content"
          android:text="ET"
          android:textColor="#1D409A"
          android:textStyle="bold"
          android:translationX="-17dp"
          android:translationY="20dp" />

      <TextView
          android:id="@+id/nom3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="P"
          android:textColor="#1D409A"
          android:textSize="20sp"
          android:textStyle="bold"
          android:translationX="-32dp"
          android:translationY="20dp" />

      <TextView
          android:id="@+id/num4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="ULSE"
          android:textColor="#1D409A"
          android:textStyle="bold"
          android:translationX="-121dp"
          android:translationY="20dp" />

      <ImageButton
          android:id="@+id/imageButton4"
          android:layout_width="1dp"
          android:layout_height="52dp"
          android:layout_weight="1"
          android:backgroundTint="#00FFFFFF"
          android:onClick="perfil1"
          android:translationX="-20dp"
          android:translationY="15dp"
          app:srcCompat="@mipmap/ic_foto1_foreground" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="USUARIOS"
        android:textAlignment="center"
        android:textColor="#076067"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:orientation="horizontal">


      <Button
          android:id="@+id/button5"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="20dp"
          android:text="Filtar" />

      <Button
          android:id="@+id/button6"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="15dp"
          android:onClick="nuevoUsuario"
          android:text="Agregar"
          android:translationX="0dp" />

      <SearchView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="15dp"
          android:translationX="20dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminUsariosRecyclerView"/>

  </LinearLayout>

  <!--    luego borrar y hacerlo con fragmentos -->
  <LinearLayout
      android:id="@+id/linearLayout3"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/cardview_light_background"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent">

    <Button
        android:id="@+id/button12"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:onClick="admin"
        android:background="@drawable/ic_home"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:onClick="listaMensaje"
        android:background="@drawable/ic_message"/>

    <Button
        android:id="@+id/button13"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/ic_user"
        android:onClick="listaUsuarios"
        android:textColorLink="#000000" />

    <Button
        android:id="@+id/button10"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:onClick="listaSitio"
        android:background="@drawable/ic_building"/>

    <Button
        android:id="@+id/button11"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/ic_router"
        android:onClick="listaEquipo"
        android:textColorLink="#000000" />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.superadmin.EditarUsuarioSuperadminFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tituloEditarSuperadmin"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aclonica"
            android:text="Editar usuario"
            android:textAlignment="center"
            android:textColor="#1DB8CC"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fotoUsuarioSuperadminEditar"
            android:layout_width="213dp"
            android:layout_height="170dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloEditarSuperadmin"
            app:srcCompat="@mipmap/ic_foto2_foreground" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/fotoUsuarioSuperadminEditar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Nombre(s)"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/nombreUser"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:text="Rodrigo Luis"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:text="Apellidos"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/apellidoUser"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Rodriguez Torres"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Rol"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/rolUser"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Administrador"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Correo"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/correoUser"
                            android:layout_width="292dp"
                            android:layout_height="wrap_content"
                            android:text="administradorrodr@gmail.com"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="TelÃ©fono"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <EditText
                            android:id="@+id/telefonoUser"
                            android:layout_width="296dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Name"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Domicilio"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/direccionUser"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Av. Universitaria 123"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelarEditar"
                        android:layout_width="157dp"
                        android:layout_height="match_parent"
                        android:text="Cancelar" />

                    <Button
                        android:id="@+id/guardarEditar"
                        android:layout_width="132dp"
                        android:layout_height="match_parent"
                        android:text="Guardar" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
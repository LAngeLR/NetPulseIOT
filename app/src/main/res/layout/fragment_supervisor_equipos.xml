<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragmentos.supervisor.SupervisorEquiposFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="915dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="EQUIPOS"
                android:textAlignment="center"
                android:textColor="#CC5732"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Sitio 1"
                android:textAlignment="center"
                android:textColor="#805555"
                android:textSize="12sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/scannerButtom"
                    android:layout_width="46dp"
                    android:layout_height="44dp"
                    android:backgroundTint="#E8F0E1"
                    android:onClick="leer"
                    android:src="@mipmap/ic_scanner_foreground"
                    android:translationX="20dp"
                    android:translationY="20dp" />

                <SearchView
                    android:layout_width="327dp"
                    android:layout_height="33dp"
                    android:background="#F1EBEB"
                    android:backgroundTint="#F6F4F4"
                    android:translationX="30dp"
                    android:translationY="20dp" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/supervisorEquiposRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="685dp"
                android:translationY="50dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
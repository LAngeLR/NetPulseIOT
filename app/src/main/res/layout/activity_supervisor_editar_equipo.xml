<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondoito">

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="630dp"
        android:translationY="80dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Equipo"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:translationX="-80dp"
                android:translationY="30dp" />

            <ImageView
                android:id="@+id/imageView37"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:translationX="100dp"
                android:translationY="-50dp"
                app:srcCompat="@mipmap/equipooo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="497dp"
                android:orientation="vertical"
                android:translationY="-80dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Marca"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/titulo"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Cisco"
                            android:textSize="16sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Modelo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="IR8300"
                            android:textSize="16sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:translationY="-10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Descripcion"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Dedicada a la fabricación, venta, mantenimiento y consultoría de equipos de telecomunicaciones."
                            android:textSize="16sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:translationY="-20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Foto"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <ImageView
                            android:id="@+id/editTextText3"
                            android:layout_width="236dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:translationX="100dp"
                            android:translationY="-20dp"
                            app:srcCompat="@mipmap/equipooo" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Button
                android:id="@+id/button14"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:backgroundTint="#3F51B5"
                android:text="Cancelar"
                android:translationX="50dp"
                android:translationY="-120dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="128dp"
                android:layout_height="40dp"
                android:backgroundTint="#F3827B"
                android:text="Guardar"
                android:translationX="230dp"
                android:translationY="-160dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
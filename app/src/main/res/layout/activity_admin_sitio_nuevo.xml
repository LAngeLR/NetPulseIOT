<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondoito"
    >

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="411dp"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="30dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom2"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="ET"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-17dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="-32dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ULSE"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-121dp"
            android:translationY="20dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:translationX="-20dp"
            android:translationY="15dp"
            app:srcCompat="@mipmap/ic_foto1_foreground" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="630dp"
        android:translationY="70dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" Sitio 1 - Editar"
                    android:textAlignment="textEnd"
                    android:textColor="#3F51B5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:translationX="-10dp"
                    android:translationY="30dp" />

                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="96dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:translationX="-30dp"
                    android:translationY="20dp"
                    app:srcCompat="@mipmap/siiito" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal asignado:"
                android:textSize="16sp"
                android:translationX="30dp" />

            <EditText
                android:id="@+id/editTextText1"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribir..."
                android:inputType="text"
                android:translationX="50dp" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departamento:"
                android:textSize="16sp"
                android:translationX="30dp" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribir..."
                android:inputType="text"
                android:translationX="50dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provincia:"
                android:textSize="16sp"
                android:translationX="30dp" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribir..."
                android:inputType="text"
                android:translationX="50dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distrito:"
                android:textSize="16sp"
                android:translationX="30dp"
                android:translationY="15dp" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribir..."
                android:inputType="text"
                android:translationX="50dp"
                android:translationY="10dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n:"
                android:textSize="16sp"
                android:translationX="30dp"
                android:translationY="20dp" />

            <EditText
                android:id="@+id/editTextText5"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribir..."
                android:inputType="text"
                android:translationX="50dp"
                android:translationY="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="204dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latitud:"
                        android:textSize="16sp"
                        android:translationX="30dp"
                        android:translationY="30dp" />

                    <EditText
                        android:id="@+id/editTextText6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Escribir..."
                        android:inputType="text"
                        android:translationX="50dp"
                        android:translationY="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Longitud:"
                        android:textSize="16sp"
                        android:translationX="10dp"
                        android:translationY="30dp" />

                    <EditText
                        android:id="@+id/editTextText"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Escribir..."
                        android:inputType="text"
                        android:translationX="20dp"
                        android:translationY="30dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button14"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:text="Cancelar"
                android:translationX="50dp"
                android:translationY="15dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F3827B"
                android:text="Aceptar"
                android:translationX="230dp"
                android:translationY="-30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
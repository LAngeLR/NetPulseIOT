<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_superadmin"
    tools:context=".fragmentos.superadmin.UsuariosSuperadminFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="86dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:text="N"
                    android:textColor="#1D409A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:translationX="30dp"
                    android:translationY="20dp" />

                <TextView
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:text="ET"
                    android:textColor="#1D409A"
                    android:textStyle="bold"
                    android:translationX="-17dp"
                    android:translationY="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="P"
                    android:textColor="#1D409A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:translationX="-32dp"
                    android:translationY="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ULSE"
                    android:textColor="#1D409A"
                    android:textStyle="bold"
                    android:translationX="-121dp"
                    android:translationY="20dp" />

                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:translationX="-20dp"
                    android:translationY="15dp"
                    app:srcCompat="@mipmap/ic_foto1_foreground" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FUNCIONALIDADES"
                android:textAlignment="center"
                android:textColor="#FFFDFD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Elige una de estas dos opciones "
                android:textSize="16sp"
                android:translationX="30dp"
                android:translationY="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="356dp"
                android:orientation="horizontal"
                android:translationY="150dp">

                <LinearLayout
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:translationX="40dp">

                    <ImageButton
                        android:layout_width="118dp"
                        android:layout_height="105dp"
                        android:backgroundTint="#80D3E1EA"
                        android:translationX="10dp"
                        app:srcCompat="@mipmap/ic_usuarionuevo_foreground" />

                    <Button
                        android:id="@+id/NuevoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#5A8CB4"
                        android:text="Nuevo Usuario"
                        android:translationY="-20dp" />

                    <ImageButton
                        android:layout_width="118dp"
                        android:layout_height="105dp"
                        android:backgroundTint="#E6F1E7"
                        android:translationX="10dp"
                        android:translationY="30dp"
                        app:srcCompat="@mipmap/ic_usuariooo_foreground" />

                    <Button
                        android:id="@+id/ListaUsuariosSuperadmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#5AADB4"
                        android:text="Lista de Usuarios"
                        android:translationY="10dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="206dp"
                    android:layout_height="441dp"
                    android:layout_weight="1"
                    android:translationY="-60dp"
                    app:srcCompat="@mipmap/ingeniero" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

            </LinearLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView100"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Nombre"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/nombreSitioItem"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="NOMBRE SITIO"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView102"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Ubicación"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/ubicacionSitioItem"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="departamento, privincia, distrito"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView104"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Tipo de Zona"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/tipoZonaItem"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="tipo de zona"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView106"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Tipo de Sitio"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/tipoSitioItem"
                                android:layout_width="292dp"
                                android:layout_height="wrap_content"
                                android:text="tipo de sitio"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView108"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Geolocación"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/geolocalizacionItem"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Geolocalizacion"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:id="@+id/equiposContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView109"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Equipos"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <!--                                <TextView-->
                            <!--                                    android:id="@+id/equiposItem"-->
                            <!--                                    android:layout_width="215dp"-->
                            <!--                                    android:layout_height="wrap_content"-->
                            <!--                                    android:text="equipos"-->
                            <!--                                    android:textSize="20sp"-->
                            <!--                                    android:translationX="60dp"-->
                            <!--                                    android:translationY="10dp" />-->
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
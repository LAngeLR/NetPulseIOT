<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.supervisor.SupervisorVerSitioFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="744dp">

        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="721dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView52"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:text="INFORMACIÓN"
                android:textAlignment="center"
                android:textColor="#3C8A82"
                android:textSize="30sp"
                android:textStyle="bold"
                android:translationX="100dp"
                android:translationY="30dp" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="216dp"
                android:layout_height="222dp"
                android:translationX="100dp"
                android:translationY="10dp"
                android:layout_margin="25dp"
                app:srcCompat="@mipmap/ic_sitio_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_marginVertical="25dp"
                android:orientation="vertical"
                android:translationY="-20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView100"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/nombreSitioItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="NOMBRE SITIO"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView102"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Ubicación"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/ubicacionSitioItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="departamento, privincia, distrito"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView104"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Zona"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/tipoZonaItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="tipo de zona"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView106"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Sitio"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/tipoSitioItem"
                            android:layout_width="292dp"
                            android:layout_height="wrap_content"
                            android:text="tipo de sitio"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView108"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Geolocación"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/geolocalizacionItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Geolocalizacion"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#289E93"
                android:translationX="330dp"
                android:translationY="-100dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/cambiarcontra" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
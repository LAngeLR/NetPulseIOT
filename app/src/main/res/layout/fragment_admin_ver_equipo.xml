<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragmentos.admin.AdminVerEquipoFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView52"
                android:layout_width="276dp"
                android:layout_height="48dp"
                android:fontFamily="@font/aclonica"
                android:text="INFORMACIÓN"
                android:textAlignment="center"
                android:textColor="#3C8A82"
                android:textSize="34sp"
                android:textStyle="bold"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.029" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="216dp"
                android:layout_height="222dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="96dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView52"
                app:srcCompat="@mipmap/ic_launcher_u_round" />

            <ScrollView
                android:layout_width="362dp"
                android:layout_height="476dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.89">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView100"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Tipo de equipo"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/tipoEquipo"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Tipo de equipo"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView104"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Modelo"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/modelo"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Modelo"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView106"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Marca"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/marca"
                                android:layout_width="292dp"
                                android:layout_height="wrap_content"
                                android:text="Marca"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView108"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Número de serie"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/numSeriee"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Número de serie"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView109"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="SKU"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/sku"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="SKU"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView1081"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Descripción"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:translationX="50dp" />

                            <TextView
                                android:id="@+id/descripcion"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:text="Descripción"
                                android:textSize="20sp"
                                android:translationX="60dp"
                                android:translationY="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_edit"
            android:translationX="335dp"
            android:translationY="800dp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>
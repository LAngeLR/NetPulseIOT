<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/cambiarcontra"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="86dp"
            android:orientation="horizontal"
            android:translationX="20dp">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="N"
                android:textColor="#F1F3F6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:translationX="30dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/nom2"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="ET"
                android:textColor="#F4F4F6"
                android:textStyle="bold"
                android:translationX="-17dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/nom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P"
                android:textColor="#F5F6F8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:translationX="-32dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ULSE"
                android:textColor="#F7F8FB"
                android:textStyle="bold"
                android:translationX="-100dp"
                android:translationY="20dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="376dp"
            android:layout_height="530dp"
            android:translationX="20dp"
            android:translationY="30dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recuperar Contraseña"
                    android:textAlignment="center"
                    android:textColor="#5E9EA8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:translationY="20dp" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:translationY="30dp"
                    app:srcCompat="@mipmap/cambiar" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:text="Ingresa tu correo registrado"
                    android:textSize="16sp"
                    android:translationX="40dp"
                    android:translationY="50dp" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Correo electrónico"
                    android:translationX="40dp"
                    android:translationY="55dp" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress2"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="usuario_user@gmail.com"
                    android:inputType="textEmailAddress"
                    android:translationX="60dp"
                    android:translationY="60dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#5A8CB4"
                    android:text="Continuar"
                    android:translationX="93dp"
                    android:translationY="100dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
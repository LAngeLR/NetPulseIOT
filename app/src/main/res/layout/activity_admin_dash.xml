            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="30dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom2"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="ET"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-17dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="-32dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ULSE"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-121dp"
            android:translationY="20dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:translationX="-20dp"
            android:translationY="15dp"
            app:srcCompat="@mipmap/ic_foto1_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="126dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="84dp">

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:translationX="60dp">

            <Button
                android:id="@+id/button6"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#66F2F7ED"
                android:text="Perfil"
                android:textColor="#938888"
                android:translationX="20dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F3F8EE"
                android:text="Ajustes"
                android:textColor="#938888"
                android:translationX="-20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EstadÃ­sticas del usuario"
            android:textAlignment="center"
            android:textColor="#5C9CB2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="521dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="210dp">

        <androidx.cardview.widget.CardView
            android:layout_width="355dp"
            android:layout_height="108dp"
            android:translationX="30dp"
            android:translationY="10dp"
            app:cardBackgroundColor="#5EA0A9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="289dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:translationY="-25dp"
                    app:srcCompat="@mipmap/ic_foto_foreground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RODRIGUEZ, Rodrigo"
                        android:textColor="#171616"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationY="20dp" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Administrador"
                        android:textColor="#050505"
                        android:textSize="16sp"
                        android:translationY="20dp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20202152"
                        android:textColor="#090909"
                        android:textSize="16sp"
                        android:translationY="25dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:orientation="horizontal"
            android:translationY="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="162dp"
                android:layout_height="131dp"
                android:translationX="30dp"
                app:cardBackgroundColor="#C8E6EA">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuarios Creados"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:translationY="15dp" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="72dp"
                    android:orientation="horizontal"
                    android:translationY="40dp">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="88dp"
                        android:layout_height="86dp"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/ic_user_foreground" />

                    <LinearLayout
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10"
                            android:textSize="34sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"

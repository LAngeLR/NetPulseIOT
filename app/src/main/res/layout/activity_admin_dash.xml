                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:text="Supervisores"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="162dp"
                android:layout_height="131dp"
                android:translationX="60dp"
                app:cardBackgroundColor="#E1D69A">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuarios AC/DS"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:translationY="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:orientation="vertical"
                    android:translationY="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:translationY="13dp">

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="127dp"
                            android:layout_height="88dp"
                            android:layout_weight="1"
                            android:translationY="-20dp"
                            app:srcCompat="@mipmap/ic_persojaverde_foreground" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:translationX="-10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView30"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView31"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="Activados(AC)"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:translationY="10dp">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="127dp"
                            android:layout_height="88dp"
                            android:layout_weight="1"
                            android:translationY="-20dp"
                            app:srcCompat="@mipmap/ic_persojaroja_foreground" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:translationX="-10dp">

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

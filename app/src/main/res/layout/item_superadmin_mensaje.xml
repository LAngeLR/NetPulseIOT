<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
    <!--    si van a copiar  y pegar no se olviden de modificar estos 3 parÃ¡metros de arriba-->

    <ImageView
        android:id="@+id/fotoItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/nombreItem"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/contadorItem"
        android:layout_toEndOf="@+id/fotoItem"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mensajeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreItem"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/contadorItem"
        android:layout_toEndOf="@+id/fotoItem"
        android:text="Mensaje"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <Button
        android:id="@+id/contadorItem"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#3430B9"
        android:text="1"
        android:textColor="#FFFFFF" />

</RelativeLayout>
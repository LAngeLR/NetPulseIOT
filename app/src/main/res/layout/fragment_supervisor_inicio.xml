<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context=".fragmentos.supervisor.SupervisorInicioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/info"
            android:layout_width="418dp"
            android:layout_height="159dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.134">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="487dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hola"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hola,"
                            android:translationX="20dp" />

                        <TextView
                            android:id="@+id/admin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SUPERVISOR"
                            android:textColor="#CF7A2F"
                            android:textStyle="bold"
                            android:translationX="10dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pregunta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="¿Qué hacemos hoy?"
                        android:textStyle="italic"
                        android:translationX="20dp"
                        android:translationY="-20dp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Encontrarás tus funciones a continuación:"
                        android:textSize="12sp"
                        android:translationX="20dp"
                        android:translationY="-40dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="182dp"
                    android:layout_weight="1"
                    android:translationY="-20dp"
                    app:srcCompat="@mipmap/superadmin" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="410dp"
            android:layout_height="357dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.748"
            tools:layout_editor_absoluteX="-6dp">

            <androidx.cardview.widget.CardView
                android:layout_width="347dp"
                android:layout_height="105dp"
                android:translationX="30dp"
                app:cardBackgroundColor="#CCFFFFFF">

                <LinearLayout
                    android:layout_width="333dp"
                    android:layout_height="90dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card1"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:text="Mensajes"
                        android:textColor="#040404"
                        android:textStyle="bold"
                        android:translationX="20dp"
                        android:translationY="10dp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="303dp"
                        android:layout_height="wrap_content"
                        android:text="Visualiza la lista de mensajes disponibles"
                        android:textColor="#000000"
                        android:translationX="20dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="347dp"
                android:layout_height="80dp"
                android:translationX="30dp"
                android:translationY="20dp"
                app:cardBackgroundColor="#CDFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="SITIOS"
                        android:textColor="#090909"
                        android:textStyle="bold"
                        android:translationX="20dp"
                        android:translationY="10dp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:text="Visualiza la lista de sitios"
                        android:textColor="#090909"
                        android:translationX="20dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="347dp"
                android:layout_height="65dp"
                android:translationX="30dp"
                android:translationY="40dp"
                app:cardBackgroundColor="#CCFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="EQUIPOS"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:translationX="20dp"
                        android:translationY="10dp" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:text="Visualiza la lista general de equipos"
                        android:textColor="#0C0C0C"
                        android:translationX="20dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/perfil_fondo" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="30dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom2"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="ET"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-17dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/nom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P"
            android:textColor="#1D409A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="-32dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ULSE"
            android:textColor="#1D409A"
            android:textStyle="bold"
            android:translationX="-121dp"
            android:translationY="20dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:translationX="-20dp"
            android:translationY="15dp"
            app:srcCompat="@mipmap/ic_foto1_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="643dp"
        android:orientation="vertical"
        android:translationY="30dp"
        tools:layout_editor_absoluteY="50dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:text="Ajustes"
            android:textAlignment="center"
            android:translationX="100dp"
            app:closeIconVisible="false" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDITAR PERFIL"
            android:textAlignment="center"
            android:textColor="#4B6FB0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="235dp"
                android:layout_height="167dp"
                android:translationX="80dp"
                android:translationY="-5dp"
                app:srcCompat="@mipmap/ic_foto_foreground" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="123dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:tint="#446AAC"
                android:translationX="-80dp"
                android:translationY="80dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical"
            android:translationY="-50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre(s)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Rodrigo Luis"
                        android:textSize="16sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Apellidos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Rodriguez Torres"
                        android:textSize="16sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Rol"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Administrador"
                        android:textSize="16sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:text="administradorrodr@gmail.com"
                        android:textSize="16sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="63dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="TelÃ©fono"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <EditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="990122890"
                        android:inputType="phone"
                        android:translationX="70dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/guardar_perfil"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9EE14949"
                android:text="Guardar"
                android:translationX="130dp"
                android:translationY="5dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
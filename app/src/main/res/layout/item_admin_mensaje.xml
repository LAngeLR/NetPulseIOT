<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--    si van a copiar  y pegar no se olviden de modificar estos 3 parÃ¡metros de arriba-->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fotoItem"
        android:layout_marginHorizontal="20dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/nombreItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fotoItem"
        android:fontFamily="serif"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mensajeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreItem"
        android:layout_toEndOf="@+id/fotoItem"
        android:fontFamily="serif"
        android:text="Mensaje"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/contadorItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginEnd="0dp"
        android:text="1"
        android:translationX="-20dp" />


</RelativeLayout>
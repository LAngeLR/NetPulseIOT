<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".fragmentos.admin.AdminUsuariosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/fondo"
        tools:context=".AdminListaSitiosActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="USUARIOS"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textSize="34sp"
                android:textStyle="bold"
                android:translationY="15dp" />

            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:translationX="60dp"
                android:translationY="20dp">

                <Button
                    android:id="@+id/filtrarboton"
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7CB7EA"
                    android:text="Filtrar"
                    android:translationX="20dp" />

                <Button
                    android:id="@+id/agregarboton"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F3F8EE"
                    android:text="Agregar"
                    android:textColor="#0B0A0A"
                    android:translationX="-20dp" />

            </LinearLayout>

            <SearchView
                android:layout_width="327dp"
                android:layout_height="33dp"
                android:background="#F1EBEB"
                android:backgroundTint="#F6F4F4"
                android:foregroundTint="#000000"
                android:translationX="40dp"
                android:translationY="40dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/adminUsariosRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:translationY="60dp" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_verificando_round"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
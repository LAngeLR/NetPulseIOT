<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brave"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.superadmin.VerUsuarioSuperadminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="755dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:text="INFORMACIÓN SUPER XD"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:translationX="100dp"
            android:translationY="30dp" />

        <ImageView
            android:id="@+id/fotoUsuarioSuperadmin"
            android:layout_width="216dp"
            android:layout_height="222dp"
            android:translationX="100dp"
            android:translationY="10dp"
            app:srcCompat="@mipmap/ic_foto2_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:orientation="vertical"
            android:translationY="-20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre(s)"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/nombreUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Rodrigo Luis"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Apellidos"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/apellidoUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Rodriguez Torres"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Rol"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/rolUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Administrador"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/correoUser"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:text="administradorrodr@gmail.com"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/telefonoUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="990122890"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Domicilio"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/direccionUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Av. Universitaria 123"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Hola"
        app:srcCompat="@drawable/ic_edit"/>

</FrameLayout>
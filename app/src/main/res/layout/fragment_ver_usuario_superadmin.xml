<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.superadmin.VerUsuarioSuperadminFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="48dp"
            android:contentDescription="Hola"
            app:backgroundTint="#9EDCE4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_edit" />

        <TextView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/aclonica"
            android:text="Información del usuario"
            android:textAlignment="center"
            android:textColor="#1DB8CC"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fotoUsuarioSuperadmin"
            android:layout_width="216dp"
            android:layout_height="222dp"
            android:layout_marginTop="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_foto2_foreground" />

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="516dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.92">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre(s)"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/nombreUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Rodrigo Luis"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Apellidos"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/apellidoUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Rodriguez Torres"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Rol"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/rolUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Administrador"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/correoUser"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:text="administradorrodr@gmail.com"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/telefonoUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="990122890"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Domicilio"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="50dp" />

                    <TextView
                        android:id="@+id/direccionUser"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:text="Av. Universitaria 123"
                        android:textSize="20sp"
                        android:translationX="60dp"
                        android:translationY="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
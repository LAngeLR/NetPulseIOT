<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragmentos.admin.AdminVerSitioFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/asignarSupervisores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_add"
                android:layout_marginVertical="10dp"
                app:backgroundTint="#BE125144"
                app:layout_constraintBottom_toTopOf="@+id/editarSitio"
                app:layout_constraintEnd_toEndOf="@+id/editarSitio"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editarSitio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="332dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:src="@drawable/ic_edit"
                app:backgroundTint="#9E3C8981"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="259dp"
                android:layout_height="56dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/aclonica"
                android:text="INFORMACIÓN"
                android:textAlignment="center"
                android:textColor="#3C8A82"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.445"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="216dp"
                android:layout_height="222dp"
                android:layout_margin="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView52"
                app:layout_constraintVertical_bias="0.026"
                app:srcCompat="@mipmap/ic_sitio_round" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_marginVertical="25dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView100"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/nombreSitioItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="NOMBRE SITIO"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView102"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Ubicación"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/ubicacionSitioItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="departamento, privincia, distrito"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView104"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Zona"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/tipoZonaItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="tipo de zona"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView106"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Sitio"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/tipoSitioItem"
                            android:layout_width="292dp"
                            android:layout_height="wrap_content"
                            android:text="tipo de sitio"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView108"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Geolocación"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/geolocalizacionItem"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Geolocalizacion"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView109"
                            android:layout_width="289dp"
                            android:layout_height="wrap_content"
                            android:text="Supervisor asignado"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="50dp" />

                        <TextView
                            android:id="@+id/supervisorAsignado"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Sin asignar"
                            android:textSize="20sp"
                            android:translationX="60dp"
                            android:translationY="10dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>